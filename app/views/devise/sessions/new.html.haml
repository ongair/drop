.pure-g
  .pure-u-1-3
  .pure-u-1-3
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f|
      %fieldset
        %legend Log into Drop
        .pure-control-group
          = f.label :email
          = f.email_field :email, autofocus: true
        .pure-control-group
          = f.label :password
          = f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          .pure-controls
            %label.pure-checkbox
              = f.check_box :remember_me              
              Remember Me
              
        %button.pure-button.pure-button-primary{:type => "submit"} Log In